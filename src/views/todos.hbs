<h1>Home page</h1>

<form action="/" method='POST'>
    <div class="input-field">
        <input placeholder="Наздание заметки" name="title" id="title" type="text" class="validate" required min="1">
        <label for="title">Название заметки</label>
        <span class="helper-text" data-error="Введите название"> </span>
    </div>

    <button class='btn btn-primary'>Добавить заметку</button>
</form>
{{#if todos.length}}
{{#each todos }}
<div class="row">
    {{#if title}}
    <div class="col s12 ">
        <div class="card ">
            <div class="card-content " style='text-align : center'>
                <span class="card-title">{{title}}</span>
            </div>
            <div class="card-action">
                <a href="{{id}}" type='button' class='btn btn-success'>Update</a>
            </div>
        </div>
    </div>
    {{/if}}
</div>
{{/each}}

</div>
{{else }}
<p>Заметок пока нет</p>
{{/if }}

<a href ="/song" class = " ] btn-large waves-effect waves-light green accent-3 path_to_song"><strong>Перейти на страницу song</strong></a>
